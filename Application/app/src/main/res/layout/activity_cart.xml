<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView

            android:id="@+id/tvTotalPriceCartList"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Total Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvCartMessage1"
        android:visibility="gone"
        android:textSize="20dp"
        android:text="Congratulation Your Order has been Placed successfully,soon it will be verified "
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="8dp"

        android:layout_above="@+id/btnNextProcess"
        android:layout_below="@+id/relativeLayout1"
        android:id="@+id/rvCartList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btnNextProcess"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Next"
        android:background="@drawable/buttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>