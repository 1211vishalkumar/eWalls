<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121725"
    tools:context=".Customer.ProductDetailsActivity">

    <ImageView
        android:background="@drawable/input_design"
        android:layout_margin="10dp"
        android:id="@+id/ivProductImageDetails"
        android:src="@drawable/p"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
    <!--android:scaleType="centerCrop"-->

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/input_design"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Product Name"
        android:layout_below="@+id/ivProductImageDetails"
        android:id="@+id/tvProductNameDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/input_design"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Product Description"
        android:layout_below="@+id/tvProductNameDetails"
        android:id="@+id/tvProductDesDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/input_design"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Product Price"
        android:layout_below="@+id/tvProductDesDetails"
        android:id="@+id/tvProductPriceDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/numberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProductPriceDetails"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="84dp"
        android:layout_marginRight="10dp"
        android:elevation="6dp"
        android:gravity="center"
        app:backGroundColor="@color/colorAccent"
        app:backgroundDrawable="@drawable/buttons"
        app:finalNumber="100"
        app:initialNumber="1"
        app:textColor="@android:color/black"
        app:textSize="10sp">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button

        android:id="@+id/btnAddToCartDetails"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@+id/numberButton"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="-52dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="56dp"
        android:layout_toEndOf="@+id/numberButton"
        android:background="@drawable/buttons"
        android:text="Cart"
        android:textColor="@android:color/black" />


</RelativeLayout>