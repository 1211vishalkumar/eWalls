<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity">

    <TextView
        android:padding="8dp"
        android:background="@drawable/buttons"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:text="Please Write Your Shipment Details"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:id="@+id/tvShipmentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edShipmentName"
        android:padding="10dp"
        android:background="@drawable/input_design"
        android:hint="Enter Name"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tvShipmentDetails"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:inputType="number"
        android:id="@+id/edShipmentPhoneNo"
        android:padding="10dp"
        android:background="@drawable/input_design"
        android:hint="Enter Phone No"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/edShipmentName"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edShipmentAddress"
        android:padding="10dp"
        android:background="@drawable/input_design"
        android:hint="Enter Shipment Address"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/edShipmentPhoneNo"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edShipmentCity"
        android:padding="10dp"
        android:background="@drawable/input_design"
        android:hint="Enter City name"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/edShipmentAddress"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnConfirmOrder"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="Click TO Confirm"
        android:background="@drawable/buttons"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>